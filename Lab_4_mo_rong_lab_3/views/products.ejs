            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
            color: #555;
            font-weight: 500;
            font-size: 14px;
        }

        input[type="text"],
        input[type="number"],
        select {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        input:focus,
        select:focus {
            outline: none;
            border-color: #007bff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
        }

        tr:hover {
            background-color: #f8f9fa;
        }

        img {
            max-width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
        }

        .btn-edit {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 13px;
            display: inline-block;
            margin-right: 5px;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 13px;
        }

        .btn-logs {
            background-color: #17a2b8;
            color: white;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 13px;
            display: inline-block;
            margin-right: 5px;
        }

        .status-badge {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-success {
            background-color: #d4edda;
            color: #155724;
        }

        .status-warning {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .no-products {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }

        .nav-links {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            padding: 20px;
        }

        .pagination a,
        .pagination span {
            padding: 8px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-decoration: none;
            color: #333;
            transition: all 0.3s;
        }

        .pagination a:hover {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

        .pagination .active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
            font-weight: 600;
        }

        .pagination .disabled {
            color: #999;
            cursor: not-allowed;
            pointer-events: none;
        }

        .pagination-info {
            color: #666;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üì¶ Qu·∫£n L√Ω S·∫£n Ph·∫©m</h1>
            <div class="user-info">
                <% if (user) { %>
                    <span class="user-badge"><%= user.username %> (<%= user.role %>)</span>
                    <a href="/logout" class="btn btn-logout">ƒêƒÉng Xu·∫•t</a>
                <% } %>
            </div>
        </div>

        <div class="nav-links">
            <% if (user && user.role === 'admin') { %>
                <a href="/products/add" class="btn">‚ûï Th√™m S·∫£n Ph·∫©m</a>
                <a href="/categories" class="btn btn-secondary">üìÅ Qu·∫£n L√Ω Danh M·ª•c</a>
            <% } %>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <h3 style="margin-bottom: 15px;">üîç T√¨m Ki·∫øm & L·ªçc</h3>
            <form action="/products" method="GET" class="filter-form">
                <div class="form-group">
                    <label for="searchName">T√™n s·∫£n ph·∫©m</label>
                    <input type="text" id="searchName" name="searchName" 
                           placeholder="Nh·∫≠p t√™n..." 
                           value="<%= filters.searchName || '' %>">
                </div>

                <div class="form-group">
                    <label for="categoryId">Danh m·ª•c</label>
                    <select id="categoryId" name="categoryId">
                        <option value="">-- T·∫•t c·∫£ --</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.categoryId %>" 
                                    <%= filters.categoryId === cat.categoryId ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="minPrice">Gi√° t·ª´</label>
                    <input type="number" id="minPrice" name="minPrice" 
                           placeholder="0" 
                           value="<%= filters.minPrice || '' %>">
                </div>

                <div class="form-group">
                    <label for="maxPrice">Gi√° ƒë·∫øn</label>
                    <input type="number" id="maxPrice" name="maxPrice" 
                           placeholder="999999999" 
                           value="<%= filters.maxPrice || '' %>">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn" style="width: 100%;">T√¨m Ki·∫øm</button>
                </div>

                <div class="form-group">
                    <a href="/products" class="btn btn-secondary" style="width: 100%; text-align: center;">
                        X√≥a B·ªô L·ªçc
                    </a>
                </div>
            </form>
        </div>

        <% if (products && products.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>T√™n S·∫£n Ph·∫©m</th>
                        <th>Gi√° (VND)</th>
                        <th>S·ªë L∆∞·ª£ng</th>
                        <th>Tr·∫°ng Th√°i Kho</th>
                        <th>Danh M·ª•c</th>
                        <th>H√¨nh ·∫¢nh</th>
                        <th>H√†nh ƒê·ªông</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { 
                        const category = categories.find(c => c.categoryId === product.categoryId);
                    %>
                        <tr>
                            <td><strong><%= product.name %></strong></td>
                            <td><%= product.price.toLocaleString('vi-VN') %>ƒë</td>
                            <td><%= product.quantity %></td>
                            <td>
                                <% if (product.inventoryStatus) { %>
                                    <span class="status-badge status-<%= product.inventoryStatus.class %>">
                                        <%= product.inventoryStatus.label %>
                                    </span>
                                <% } %>
                            </td>
                            <td><%= category ? category.name : 'Ch∆∞a ph√¢n lo·∫°i' %></td>
                            <td>
                                <% if (product.url_image) { %>
                                    <img src="<%= product.url_image %>" alt="<%= product.name %>">
                                <% } else { %>
                                    <em style="color: #999;">Kh√¥ng c√≥ ·∫£nh</em>
                                <% } %>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/products/<%= product.id %>/logs" class="btn-logs">üìã Logs</a>
                                    <% if (user && user.role === 'admin') { %>
                                        <a href="/products/edit/<%= product.id %>" class="btn-edit">‚úèÔ∏è S·ª≠a</a>
                                        <form action="/products/delete/<%= product.id %>" method="POST" 
                                              style="display: inline;"
                                              onsubmit="return confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a s·∫£n ph·∫©m n√†y?')">
                                            <button type="submit" class="btn-delete">üóëÔ∏è X√≥a</button>
                                        </form>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Ph√¢n trang -->
            <% if (pagination && pagination.totalPages > 1) { %>
                <div class="pagination">
                    <span class="pagination-info">
                        Hi·ªÉn th·ªã <%= (pagination.currentPage - 1) * pagination.limit + 1 %> - 
                        <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalProducts) %> 
                        trong t·ªïng s·ªë <%= pagination.totalProducts %> s·∫£n ph·∫©m
                    </span>
                    
                    <!-- Previous button -->
                    <% if (pagination.currentPage > 1) { %>
                        <a href="?page=<%= pagination.currentPage - 1 %><%= filters.categoryId ? '&categoryId=' + filters.categoryId : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.searchName ? '&searchName=' + filters.searchName : '' %>">
                            ‚Üê Tr∆∞·ªõc
                        </a>
                    <% } else { %>
                        <span class="disabled">‚Üê Tr∆∞·ªõc</span>
                    <% } %>

                    <!-- Page numbers -->
                    <% 
                        let startPage = Math.max(1, pagination.currentPage - 2);
                        let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                        
                        if (startPage > 1) { %>
                            <a href="?page=1<%= filters.categoryId ? '&categoryId=' + filters.categoryId : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.searchName ? '&searchName=' + filters.searchName : '' %>">1</a>
                            <% if (startPage > 2) { %>
                                <span>...</span>
                            <% } %>
                        <% }
                        
                        for (let i = startPage; i <= endPage; i++) { %>
                            <% if (i === pagination.currentPage) { %>
                                <span class="active"><%= i %></span>
                            <% } else { %>
                                <a href="?page=<%= i %><%= filters.categoryId ? '&categoryId=' + filters.categoryId : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.searchName ? '&searchName=' + filters.searchName : '' %>">
                                    <%= i %>
                                </a>
                            <% } %>
                        <% }
                        
                        if (endPage < pagination.totalPages) { %>
                            <% if (endPage < pagination.totalPages - 1) { %>
                                <span>...</span>
                            <% } %>
                            <a href="?page=<%= pagination.totalPages %><%= filters.categoryId ? '&categoryId=' + filters.categoryId : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.searchName ? '&searchName=' + filters.searchName : '' %>">
                                <%= pagination.totalPages %>
                            </a>
                        <% } %>

                    <!-- Next button -->
                    <% if (pagination.currentPage < pagination.totalPages) { %>
                        <a href="?page=<%= pagination.currentPage + 1 %><%= filters.categoryId ? '&categoryId=' + filters.categoryId : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.searchName ? '&searchName=' + filters.searchName : '' %>">
                            Sau ‚Üí
                        </a>
                    <% } else { %>
                        <span class="disabled">Sau ‚Üí</span>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="no-products">
                <h3>Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m n√†o</h3>
                <p>Th·ª≠ thay ƒë·ªïi b·ªô l·ªçc ho·∫∑c th√™m s·∫£n ph·∫©m m·ªõi.</p>
            </div>
        <% } %>
    </div>
</body>
</html>
